# Dev stage
FROM node:20

# Set working directory
WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy dependency files
COPY package.json pnpm-lock.yaml ./

# Install dependencies
RUN pnpm install

# Copy the rest of the source
COPY . .

# Expose Vite default port
EXPOSE 5173

# Start Vite dev server
CMD ["pnpm", "dev", "--host"]
